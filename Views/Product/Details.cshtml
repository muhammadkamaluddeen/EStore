@model Product

<h2>@Model.ProductName</h2>

<div class="thumbnail">
    <img alt="@Model.ProductName"  src="@("~/Images/"+ Model.ImagePath)" asp-append-version="true" width="400" height="400"/>
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h4>@Model.ShortDesc</h4>
        <p>@Model.LongDesc</p>

        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.ProductId">Add to cart</a>
            </p>
        </div>
    </div>
</div>
