@model IEnumerable<Category>

<li class="dropdown">
    <a asp-controller="Shopping"
       asp-action="List"
       class="dropdown-toggle" data-toggle="dropdown">Category<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
<li>
    <a asp-controller="Shopping" asp-action="List"
       asp-route-category="@category.CategoryName">@category.CategoryName</a>
</li>}
        <li class="divider"></li>
        <li>
            <a asp-controller="Shopping" asp-action="List" asp-route-Category="">View all products</a>
        </li>
    </ul>
</li>