@model Product

<div class="col-sm-4 col-md-4 col-lg-4">
    <div class="img-thumbnail">
        <img src="@("~/Images/"+ Model.ImagePath)" asp-append-version="true" width="200" height="200">

        <div class="caption">
            <h4><a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">@Model.ProductName</a></h4>
            <h5 class="pull-right">&#8358; @Model.Price</h5>
            <p>@Model.ShortDesc</p>

            <div class="addToCart">
                <form asp-action="AddToCart" asp-controller="Carts">
                    @*<p class="button">
                        <a class="btn btn-primary"
                           asp-controller="Carts"
                           asp-action="AddToCart"
                           asp-route-productId="@Model.ProductId">Add to cart</a>
                    </p>*@
                    <input name="productId" value="@Model.ProductId" type="hidden"  />
                    <button class="btn btn-primary" type="submit">Add To Cart </button>
                </form>

            </div>
        </div>

    </div>
</div>